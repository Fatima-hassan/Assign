<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="quizer.activties.StudentActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/c3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayoutMcq"
            android:layout_width="334dp"
            android:layout_height="385dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="315dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.797">

            <RadioGroup
                android:id="@+id/rdgrpMcqAns"
                android:layout_width="341dp"
                android:layout_height="313dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.063"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.112">

                <RadioButton
                    android:id="@+id/radAnsA"
                    android:layout_width="328dp"
                    android:layout_height="14dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:text="True"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radAnsB"
                    android:layout_width="328dp"
                    android:layout_height="14dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:text="False"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radAnsC"
                    android:layout_width="328dp"
                    android:layout_height="14dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:text="True"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radAnsD"
                    android:layout_width="328dp"
                    android:layout_height="14dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:text="False"
                    android:textSize="16sp" />

            </RadioGroup>

        </android.support.constraint.ConstraintLayout>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="139dp"
            android:layout_height="72dp"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="8dp"
            android:onClick="nextQuestion"
            android:text="Next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.941"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.016" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayoutTF"
            android:layout_width="337dp"
            android:layout_height="254dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="315dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.798">

            <RadioGroup
                android:id="@+id/rdgrpTFAns"
                android:layout_width="332dp"
                android:layout_height="132dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.063"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.112">

                <RadioButton
                    android:id="@+id/radAnsTrue"
                    android:layout_width="328dp"
                    android:layout_height="14dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:text="True"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radAnsFalse"
                    android:layout_width="328dp"
                    android:layout_height="14dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:text="False"
                    android:textSize="16sp" />

            </RadioGroup>

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/tvQues"
            android:layout_width="338dp"
            android:layout_height="82dp"
            android:layout_marginBottom="384dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Question"
            android:inputType="textMultiLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.754"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQuesNum"
            app:layout_constraintVertical_bias="0.032" />

        <TextView
            android:id="@+id/tvMarks"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="216dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="108dp"
            android:layout_marginTop="16dp"
            android:text="Marks ( 5 )"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.649"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvQuesNum"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayoutNum"
            android:layout_width="353dp"
            android:layout_height="280dp"
            android:layout_marginBottom="52dp"
            android:layout_marginEnd="315dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.916">

            <EditText
                android:id="@+id/etAns"
                android:layout_width="337dp"
                android:layout_height="132dp"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:hint="Answer"
                android:inputType="textMultiLine"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.074" />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/c2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="222dp"
            android:layout_height="76dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="Quiz Result"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.595"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.217" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="32dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="/"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvScore"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="54dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="10"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.425"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="10"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.013"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/c1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <Spinner
            android:id="@+id/spQuiz"
            android:layout_width="363dp"
            android:layout_height="65dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSelectQuiz"
            app:layout_constraintVertical_bias="0.029" />

        <Button
            android:id="@+id/btnSelectQuiz"
            android:layout_width="357dp"
            android:layout_height="52dp"
            android:layout_marginBottom="432dp"
            android:layout_marginTop="8dp"
            android:onClick="startQuiz"
            android:text="Submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.207" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
